<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="data" type="com.example.databindingapp.CalcViewModel" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout

        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{data.result}"
            android:textSize="50sp"
            android:textAlignment="textEnd"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/clear"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="C"
            android:textSize="50sp"
            android:textColor="@color/topCalcText"
            android:backgroundTint="@color/topCalcButton"
            android:onClick="@{() -> data.clearClicked()}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/resultSwitch"
            app:layout_constraintTop_toBottomOf="@id/result"
            app:layout_constraintBottom_toTopOf="@id/button1"
            app:layout_constraintHorizontal_chainStyle="spread"
    />
    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/resultSwitch"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="+/-"
            android:textSize="50sp"
            android:textColor="@color/topCalcText"
            android:backgroundTint="@color/topCalcButton"
            app:layout_constraintStart_toEndOf="@id/clear"
            app:layout_constraintEnd_toStartOf="@id/waru"
            app:layout_constraintTop_toBottomOf="@id/result"
            app:layout_constraintBottom_toTopOf="@id/button2"
    />
    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/waru"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="%"
            android:textSize="50sp"
            android:textColor="@color/topCalcText"
            android:backgroundTint="@color/topCalcButton"
            app:layout_constraintStart_toEndOf="@id/resultSwitch"
            app:layout_constraintEnd_toStartOf="@id/warisan"
            app:layout_constraintTop_toBottomOf="@id/result"
            app:layout_constraintBottom_toTopOf="@id/button3"
    />
    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/warisan"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="รท"
            android:textSize="50sp"
            android:textColor="@color/calcText"
            android:backgroundTint="@color/calcButton"
            app:layout_constraintStart_toEndOf="@id/waru"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/result"
            app:layout_constraintBottom_toTopOf="@id/kakesan"
    />


    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/_1"
            android:textSize="50sp"
            android:textColor="@color/numberText"
            android:backgroundTint="@color/numberButton"
            android:onClick="@{() -> data.buttonClicked(1)}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/button2"
            app:layout_constraintTop_toBottomOf="@id/clear"
            app:layout_constraintBottom_toTopOf="@id/button4"
            app:layout_constraintHorizontal_chainStyle="spread"
    />
    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/_2"
            android:textSize="50sp"
            android:textColor="@color/numberText"
            android:backgroundTint="@color/numberButton"
            android:onClick="@{() -> data.buttonClicked(2)}"
            app:layout_constraintStart_toEndOf="@id/button1"
            app:layout_constraintEnd_toStartOf="@id/button3"
            app:layout_constraintTop_toBottomOf="@id/resultSwitch"
            app:layout_constraintBottom_toTopOf="@id/button5"
    />
    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="3"
            android:textSize="50sp"
            android:textColor="@color/numberText"
            android:backgroundTint="@color/numberButton"
            android:onClick="@{() -> data.buttonClicked(3)}"
            app:layout_constraintStart_toEndOf="@id/button2"
            app:layout_constraintEnd_toStartOf="@id/kakesan"
            app:layout_constraintTop_toBottomOf="@id/waru"
            app:layout_constraintBottom_toTopOf="@id/button6"
    />
    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/kakesan"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="ร"
            android:textSize="50sp"
            android:textColor="@color/calcText"
            android:backgroundTint="@color/calcButton"
            app:layout_constraintStart_toEndOf="@id/button3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/warisan"
            app:layout_constraintBottom_toTopOf="@id/hikisan"
    />


    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="4"
            android:textSize="50sp"
            android:textColor="@color/numberText"
            android:backgroundTint="@color/numberButton"
            android:onClick="@{() -> data.buttonClicked(4)}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/button5"
            app:layout_constraintTop_toBottomOf="@id/button1"
            app:layout_constraintBottom_toTopOf="@id/button7"
            app:layout_constraintHorizontal_chainStyle="spread"
    />
    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="5"
            android:textSize="50sp"
            android:textColor="@color/numberText"
            android:backgroundTint="@color/numberButton"
            android:onClick="@{() -> data.buttonClicked(5)}"
            app:layout_constraintStart_toEndOf="@id/button4"
            app:layout_constraintEnd_toStartOf="@id/button6"
            app:layout_constraintTop_toBottomOf="@id/button2"
            app:layout_constraintBottom_toTopOf="@id/button8"
    />
    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="6"
            android:textSize="50sp"
            android:textColor="@color/numberText"
            android:backgroundTint="@color/numberButton"
            android:onClick="@{() -> data.buttonClicked(6)}"
            app:layout_constraintStart_toEndOf="@id/button5"
            app:layout_constraintEnd_toStartOf="@id/hikisan"
            app:layout_constraintTop_toBottomOf="@id/button3"
            app:layout_constraintBottom_toTopOf="@id/button9"
    />
    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/hikisan"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="-"
            android:textSize="50sp"
            android:textColor="@color/calcText"
            android:backgroundTint="@color/calcButton"
            android:onClick="@{() -> data.minusClicked()}"
            app:layout_constraintStart_toEndOf="@id/button6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/kakesan"
            app:layout_constraintBottom_toTopOf="@id/button9"
    />


    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="7"
            android:textSize="50sp"
            android:textColor="@color/numberText"
            android:backgroundTint="@color/numberButton"
            android:onClick="@{() -> data.buttonClicked(7)}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/button8"
            app:layout_constraintTop_toBottomOf="@id/button4"
            app:layout_constraintBottom_toTopOf="@id/button0"
            app:layout_constraintHorizontal_chainStyle="spread"
    />
    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="8"
            android:textSize="50sp"
            android:textColor="@color/numberText"
            android:backgroundTint="@color/numberButton"
            android:onClick="@{() -> data.buttonClicked(8)}"
            app:layout_constraintStart_toEndOf="@id/button7"
            app:layout_constraintEnd_toStartOf="@id/button9"
            app:layout_constraintTop_toBottomOf="@id/button5"
            app:layout_constraintBottom_toTopOf="@id/button0"
    />
    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button9"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="9"
            android:textSize="50sp"
            android:textColor="@color/numberText"
            android:backgroundTint="@color/numberButton"
            android:onClick="@{() -> data.buttonClicked(9)}"
            app:layout_constraintStart_toEndOf="@id/button8"
            app:layout_constraintEnd_toStartOf="@id/tasisan"
            app:layout_constraintTop_toBottomOf="@id/button6"
            app:layout_constraintBottom_toTopOf="@id/dot"
    />
    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/tasisan"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="+"
            android:textSize="50sp"
            android:textColor="@color/calcText"
            android:backgroundTint="@color/calcButton"
            android:onClick="@{() -> data.plusClicked()}"
            app:layout_constraintStart_toEndOf="@id/button9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/hikisan"
            app:layout_constraintBottom_toTopOf="@id/equal"
    />


    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="0"
            android:textSize="50sp"
            android:textColor="@color/numberText"
            android:backgroundTint="@color/numberButton"
            android:onClick="@{() -> data.buttonClicked(0)}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/button9"
            app:layout_constraintTop_toBottomOf="@id/button7"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread"
    />
    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/dot"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="."
            android:textSize="50sp"
            android:textColor="@color/numberText"
            android:backgroundTint="@color/numberButton"
            android:onClick="@{() -> data.dotClicked()}"
            app:layout_constraintStart_toEndOf="@id/button0"
            app:layout_constraintEnd_toStartOf="@id/equal"
            app:layout_constraintTop_toBottomOf="@id/button9"
            app:layout_constraintBottom_toBottomOf="parent"
    />
    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/equal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="="
            android:textSize="50sp"
            android:textColor="@color/calcText"
            android:backgroundTint="@color/calcButton"
            android:onClick="@{() -> data.equalClicked()}"
            app:layout_constraintStart_toEndOf="@id/dot"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tasisan"
            app:layout_constraintBottom_toBottomOf="parent"
    />


</androidx.constraintlayout.widget.ConstraintLayout>
</layout>